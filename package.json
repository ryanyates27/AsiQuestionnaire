{
  "name": "asi-questionnaire-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently --kill-others --names \"VITE,ELECTRON\" \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "package": "npm run dist",
    "preview": "vite preview",
    "lint": "eslint .",
    "postinstall": "npx @electron/rebuild --force --parallel"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.10.0",
    "fuse.js": "^6.6.2",
    "gpt4all": "^4.0.0",
    "onnxruntime-node": "^1.22.0-rev",
    "pdfjs-dist": "^5.4.394",
    "pocketbase": "^0.26.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^35.7.4",
    "electron-builder": "^26.0.12",
    "globals": "^16.0.0",
    "vite": "^6.3.1",
    "wait-on": "^8.0.3"
  },
  "build": {
    "extraResources": [
      {
        "from": "models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/gpt4all/**"
    ],
    "appId": "com.ASI.questionnaireapp",
    "productName": "QuestionnaireApp",
    "files": [
      "dist",
      "electron"
    ],
    "directories": {
      "output": "dist_electron",
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
